@model LojaNinja.MVC.Models.Login.LoginViewModel

@{
    ViewBag.titulo = "Cadastro";
    TempData["Usuario"] = "Faça Login";
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

@using (Html.BeginForm("Entrar", "Login", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    <h3>Login</h3>
    <hr />
    <div class="cadastro">
        <label class="label label-success">@TempData["Cadastro"]</label>
    </div>
    <div>
        @Html.ValidationSummary(excludePropertyErrors: false)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email) <br />
        @Html.TextBoxFor(m => m.Email) 
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Senha) <br />
        @Html.PasswordFor(m => m.Senha)
    </div>
    <div class="form-group">
        @Html.ActionLink("Cadastre-se", "CadastroUsuario", "Login", new { @class = "btn btn-warning" })
        <input type="submit" class="btn btn-danger" value="Entrar" />     
    </div>
}


